<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %> <%-
  include("./partials/headersignout.ejs") %>

  <body class="tms-auth-body">
    <div class="container tms-auth">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="tms-auth-card">
            <h1 class="text-center mb-2">Book My Trip</h1>
            <p class="text-center text-muted mb-4">Log in to continue</p>

            <form action="/login" method="post" onsubmit="return Validate()">
              <% if(loginerror.length == 1){ %>
              <div class="alert alert-danger text-center h5 p-3" role="alert">
                <%= loginerror %>
              </div>
              <% } %>
              <div class="form-group">
                <label><b>Email address</b></label>
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  placeholder="Enter your E-mail Address"
                />
              </div>

              <div class="form-group">
                <label><b>Password</b></label>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Enter Your Password"
                />
              </div>

              <button type="submit" class="btn tms-btn w-100">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
