<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %> <%- include("./partials/adminnavbar.ejs") %>

  <body class="tms-page">
    <section class="tms-page-header">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
          <div>
            <p class="tms-pill d-inline-block mb-2">Admin overview</p>
            <h1 class="mb-1">Enquiries</h1>
            <p class="text-muted mb-0">Review and respond to user enquiries.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="tms-section">
      <div class="container">
        <div class="tms-history-table tms-admin-table">
          <div class="tms-history-row tms-history-head">
            <div>User ID</div>
            <div>Category</div>
            <div>Description</div>
            <div>Status</div>
            <div>Action</div>
          </div>

          <% for (let e of enquiries) {%>
          <div class="tms-history-row">
            <div class="text-muted"><%= e.userId %></div>
            <div class="font-weight-semibold"><%= e.category %></div>
            <div class="text-muted"><%= e.description %></div>

            <% var stat = ""; var badge = "" %> <% if(e.status == 0) {stat = "pending"; badge = "pending" } %> <% if(e.status == 1) {stat = "confirmed"; badge = "confirmed" } %> <% if(e.status == -1) {stat = "rejected"; badge = "rejected" } %>
            <div>
              <span class="tms-badge <%= badge %>"><%= stat %></span>
            </div>
            <div class="tms-action-inline">
              <form action="/enquiry/accept/<%=e._id%>" method="post">
                <button class="btn tms-btn" type="submit">Accept</button>
              </form>
              <form action="/enquiry/reject/<%=e._id%>" method="post">
                <button class="btn tms-btn-danger" type="submit">Reject</button>
              </form>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>
  </body>
</html>
