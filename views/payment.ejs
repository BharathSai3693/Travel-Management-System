<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %> <%- include("./partials/header.ejs") %>

  <body>
    <div class="container p-3">
      <div class="row">
        <div class="col-6">
          <div class="container" style="padding: 50px">
            <div class="invoice-container" ref="document" id="html">
              <table
                style="width: 100%; height: auto; text-align: center"
                BORDER="0"
                CELLSPACING="0"
              >
                <thead style="background: #fafafa; padding: 8px">
                  <tr style="font-size: 20px">
                    <td
                      colspan="4"
                      style="padding: 20px 20px; text-align: left"
                    >
                      MAKE MY TOUR
                    </td>
                  </tr>
                </thead>
                <tbody style="background: #ffff; padding: 20px">
                  <tr>
                    <td
                      colspan="4"
                      style="
                        padding: 20px 0px 0px 20px;
                        text-align: left;
                        font-size: 16px;
                        font-weight: bold;
                        color: #000;
                      "
                    >
                      Hello, <%= name %>
                    </td>
                  </tr>
                  <tr>
                    <td
                      colspan="4"
                      style="
                        text-align: left;
                        padding: 10px 10px 10px 20px;
                        font-size: 14px;
                      "
                    >
                      Your order details
                    </td>
                  </tr>
                </tbody>
              </table>

              <!-- order date, Order No, Payment -->
              <table
                style="
                  width: 100%;
                  height: auto;
                  background-color: #fff;
                  text-align: center;
                  padding: 10px;
                  background: #fafafa;
                "
              >
                <tbody>
                  <tr style="color: #6c757d; font-size: 20px">
                    <td
                      style="
                        border-right: 1.5px dashed #dcdcdc;
                        width: 25%;
                        font-size: 12px;
                        font-weight: 700;
                        padding: 0px 0px 10px 0px;
                      "
                    >
                      Order Date
                    </td>
                    <td
                      style="
                        border-right: 1.5px dashed #dcdcdc;
                        width: 25%;
                        font-size: 12px;
                        font-weight: 700;
                        padding: 0px 0px 10px 0px;
                      "
                    >
                      Order No.
                    </td>
                    <td
                      style="
                        border-right: 1.5px dashed #dcdcdc;
                        width: 25%;
                        font-size: 12px;
                        font-weight: 700;
                        padding: 0px 0px 10px 0px;
                      "
                    >
                      Payment
                    </td>
                  </tr>
                  <tr
                    style="
                      background-color: #fff;
                      font-size: 12px;
                      color: #262626;
                    "
                  >
                    <td
                      style="
                        border-right: 1.5px dashed #dcdcdc;
                        width: 25%;
                        font-weight: bold;
                        background: #fafafa;
                      "
                    >
                      <% const yourDate = new Date() %> <%=
                      yourDate.toISOString().split('T')[0] %>
                    </td>
                    <td
                      style="
                        border-right: 1.5px dashed #dcdcdc;
                        width: 25%;
                        font-weight: bold;
                        background: #fafafa;
                      "
                    >
                      000000001
                    </td>
                    <td
                      style="
                        border-right: 1.5px dashed #dcdcdc;
                        width: 25%;
                        font-weight: bold;
                        background: #fafafa;
                      "
                    >
                      DEBIT CARD
                    </td>
                  </tr>
                </tbody>
              </table>

              <table
                style="
                  width: 100%;
                  height: auto;
                  background-color: #fff;
                  margin-top: 0px;
                  padding: 20px;
                  font-size: 12px;
                  border: 1px solid #ebebeb;
                  border-top: 0px;
                "
              >
                <thead>
                  <tr style="color: #6c757d; font-weight: bold; padding: 5px">
                    <td colspan="2" style="text-align: left">
                      PACKAGE INFORMATION
                    </td>
                    <td colspan="2" style="text-align: right; padding: 10px">
                      PRICE
                    </td>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td style="width: 10%" colspan="2">Food</td>
                    <td
                      style="width: 20%; margin-left: 10px; text-align: right"
                      colspan="2"
                    >
                      <%= (total*20)/100 %>/-
                    </td>
                  </tr>
                  <tr>
                    <td style="width: 10%" colspan="2">Accomodation</td>
                    <td
                      style="width: 20%; margin-left: 10px; text-align: right"
                      colspan="2"
                    >
                      <%= (total*25)/100 %>/-
                    </td>
                  </tr>
                  <tr>
                    <td style="width: 10%" colspan="2">Travel</td>
                    <td
                      style="width: 20%; margin-left: 10px; text-align: right"
                      colspan="2"
                    >
                      <%= (total*15)/100 %>/-
                    </td>
                  </tr>

                  <tr>
                    <td style="width: 10%" colspan="2">Activities</td>
                    <td
                      style="width: 20%; margin-left: 10px; text-align: right"
                      colspan="2"
                    >
                      <%= (total*30)/100 %>/-
                    </td>
                  </tr>

                  <tr>
                    <td style="width: 10%" colspan="2">GST + Taxes</td>
                    <td
                      style="width: 20%; margin-left: 10px; text-align: right"
                      colspan="2"
                    >
                      <%= (total*10)/100 %>/-
                    </td>
                  </tr>
                </tbody>
              </table>
              <table
                style="
                  width: 100%;
                  height: auto;
                  background-color: #fff;
                  padding: 20px;
                  font-size: 12px;
                  border: 1px solid #ebebeb;
                  border-top: 0;
                "
              >
                <tbody>
                  <tr style="padding: 20px; color: #000; font-size: 15px">
                    <td style="font-weight: bold; padding: 5px 0px">Total</td>
                    <td
                      style="
                        text-align: right;
                        padding: 5px 0px;
                        font-weight: bold;
                        font-size: 16px;
                      "
                    >
                      <%= total %>/-
                    </td>
                  </tr>

                  <tr>
                    <td colspan="2" style="font-weight: bold">
                      <span style="color: #c61932; font-weight: bold"
                        >THANK YOU</span
                      >
                      for choosing us!!!
                    </td>
                  </tr>
                  <tr>
                    <td
                      colspan="2"
                      style="
                        font-weight: bold;
                        text-align: left;
                        padding: 5px 0px 0px 00px;
                        font-size: 14px;
                      "
                    >
                      Make My Tour<span></span> team
                    </td>
                  </tr>
                </tbody>
                <tfoot style="padding-top: 20px; font-weight: bold">
                  <tr>
                    <td style="padding-top: 20px">
                      <a href="/enquiry"> Need help?</a> Contact us
                      <span style="color: #c61932"> makemytour@admin.com </span>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
        <div class="col-6">
          <h2 class="text-center">Payment</h2>

          <form action="/bookingsuccess" method="get">
            <input
              type="text"
              class="form-control my-4"
              placeholder="CARD NUMBER"
            />
            <div class="row my-4">
              <div class="col">
                <input
                  type="month"
                  class="form-control"
                  placeholder="MONTH, YEAR"
                />
              </div>
              <div class="col">
                <input type="password" class="form-control" placeholder="CVV" />
              </div>
            </div>
            <input
              type="text"
              class="form-control my-4"
              placeholder="NAME ON THE CARD"
            />

            <h3>Total Payment : <%= total%></h3>
            <button type="submit" class="btn btn-primary">Make Payment</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
