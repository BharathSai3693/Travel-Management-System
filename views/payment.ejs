<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %> <%- include("./partials/header.ejs") %>

  <body class="tms-page">
    <section class="tms-page-header">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
          <div>
            <p class="tms-pill d-inline-block mb-2">Secure checkout</p>
            <h1 class="mb-1">Payment</h1>
            <p class="text-muted mb-0">Review your invoice and complete payment.</p>
          </div>
          <a class="btn tms-btn-outline mt-3 mt-lg-0" href="/packages">
            Continue browsing
          </a>
        </div>
      </div>
    </section>

    <section class="tms-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-4">
            <div class="tms-invoice">
              <div class="tms-invoice-header">
                <div>
                  <h4 class="mb-1">Book My Trip</h4>
                  <p class="text-muted mb-0">Invoice summary</p>
                </div>
                <span class="tms-pill">Order #000000001</span>
              </div>

              <div class="tms-invoice-body">
                <p class="mb-1"><strong>Hello, <%= name %></strong></p>
                <p class="text-muted mb-3">Your order details</p>

                <div class="tms-invoice-meta">
                  <div>
                    <span class="text-muted">Order Date</span>
                    <h6 class="mb-0">
                      <% const yourDate = new Date() %>
                      <%= yourDate.toISOString().split('T')[0] %>
                    </h6>
                  </div>
                  <div>
                    <span class="text-muted">Payment</span>
                    <h6 class="mb-0">Debit Card</h6>
                  </div>
                </div>

                <div class="tms-invoice-line">
                  <div>Food</div>
                  <div>₹<%= (total*20)/100 %></div>
                </div>
                <div class="tms-invoice-line">
                  <div>Accommodation</div>
                  <div>₹<%= (total*25)/100 %></div>
                </div>
                <div class="tms-invoice-line">
                  <div>Travel</div>
                  <div>₹<%= (total*15)/100 %></div>
                </div>
                <div class="tms-invoice-line">
                  <div>Activities</div>
                  <div>₹<%= (total*30)/100 %></div>
                </div>
                <div class="tms-invoice-line">
                  <div>GST + Taxes</div>
                  <div>₹<%= (total*10)/100 %></div>
                </div>

                <div class="tms-invoice-total">
                  <div>Total</div>
                  <div>₹<%= total %></div>
                </div>

                <p class="text-muted mt-3 mb-0">
                  Thank you for choosing Book My Trip. Need help?
                  <a href="/enquiry">Contact us</a>
                </p>
              </div>
            </div>
          </div>

          <div class="col-lg-6 mb-4">
            <div class="tms-card">
              <h4 class="mb-3">Card details</h4>
              <form action="/bookingsuccess" method="get">
                <div class="form-group">
                  <label>Card number</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="1234 5678 9012 3456"
                  />
                </div>
                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <label>Expiry</label>
                      <input
                        type="month"
                        class="form-control"
                        placeholder="MM/YYYY"
                      />
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-group">
                      <label>CVV</label>
                      <input type="password" class="form-control" placeholder="CVV" />
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label>Name on card</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Name on the card"
                  />
                </div>

                <div class="d-flex align-items-center justify-content-between mb-3">
                  <span class="text-muted">Total payment</span>
                  <h5 class="mb-0">₹<%= total %></h5>
                </div>
                <button type="submit" class="btn tms-btn w-100">
                  Make payment
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
