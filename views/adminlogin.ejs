<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>

  <body
    class="p-3"
    style="
      background-image: url('https://images.pexels.com/photos/531880/pexels-photo-531880.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500');
      background-size: cover;
    "
  >
    <div class="container p-4 bg-dark my-5 rounded" style="width: 50%">
      <% if(loginerror.length == 1){ %>
      <div class="alert alert-danger text-center h3 p-3" role="alert">
        <%= loginerror %>
      </div>
      <% } %>

      <h1 class="text-center text-light">ADMIN LOGIN FORM</h1>

      <form action="/adminlogin" method="post" class="bg-info p-3 rounded">
        <div class="form-group">
          <label><b>Email address</b></label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="Enter your E-mail Address"
          />
        </div>

        <div class="form-group">
          <label><b>Password</b></label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="Enter Your Password"
          />
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
  </body>
</html>
