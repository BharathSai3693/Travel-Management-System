<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %> <%- include("./partials/header.ejs") %>
  <body class="tms-page">
    <section class="tms-page-header">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
          <div>
            <p class="tms-pill d-inline-block mb-2">Your journeys</p>
            <h1 class="mb-1">Tour History</h1>
            <p class="text-muted mb-0">
              Track past bookings and their current status at a glance.
            </p>
          </div>
          <a class="btn tms-btn mt-3 mt-lg-0" href="/packages">Book again</a>
        </div>
      </div>
    </section>

    <section class="tms-section">
      <div class="container">
        <div class="tms-history-table">
          <div class="tms-history-row tms-history-head">
            <div>Package</div>
            <div>Booking ID</div>
            <div>Date</div>
            <div>Email</div>
            <div>Status</div>
          </div>

          <% for(let [index,b] of bookings.entries()) {%>
          <div class="tms-history-row">
            <div class="font-weight-semibold">
              <%=packages[index].packageName%>
            </div>
            <div class="text-muted"><%=b._id%></div>
            <div class="text-muted">
              <%= b.bookedtime.toISOString().substring(0, 10) %>
            </div>
            <div class="text-muted"><%= b.bookingMail %></div>

            <% var stat = ""; var badge = "" %> <% if(b.status == 0) {stat = "Pending";badge = "pending" } %> <%
            if(b.status == 1) {stat = "Confirmed";badge = "confirmed" } %> <% if(b.status == -1) {stat =
            "Rejected"; badge = "rejected" } %>
            <div>
              <span class="tms-badge <%= badge %>"><%= stat %></span>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>
  </body>
</html>
