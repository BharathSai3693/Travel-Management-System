<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %> <%- include("./partials/adminnavbar.ejs") %>
  <body class="tms-page">
    <section class="tms-page-header">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
          <div>
            <p class="tms-pill d-inline-block mb-2">Admin overview</p>
            <h1 class="mb-1">Bookings</h1>
            <p class="text-muted mb-0">Approve or reject incoming bookings.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="tms-section">
      <div class="container">
        <div class="tms-history-table tms-admin-table">
          <div class="tms-history-row tms-history-head">
            <div>Booking ID</div>
            <div>Package</div>
            <div>User</div>
            <div>Email</div>
            <div>Mobile</div>
            <div>Remarks</div>
            <div>Status</div>
            <div>Action</div>
          </div>

          <%for(const [index,b] of bookings.entries()){%>
          <div class="tms-history-row">
            <div class="text-muted"><%=b._id%></div>
            <div class="font-weight-semibold">
              <%= packages[index] ? packages[index].packageName : "Unknown package" %>
            </div>
            <div class="font-weight-semibold">
              <%= users[index] ? users[index].username : "Unknown user" %>
            </div>
            <div class="text-muted"><%= b.bookingMail %></div>
            <div class="text-muted"><%= b.bookingMobile %></div>
            <div class="text-muted"><%= b.bookingRemarks %></div>

            <% var stat = ""; var badge = "" %> <% if(b.status == 0) {stat = "pending"; badge = "pending" } %> <%
            if(b.status == 1) {stat = "confirmed"; badge = "confirmed" } %> <% if(b.status == -1) {stat =
            "rejected"; badge = "rejected" } %>
            <div>
              <span class="tms-badge <%= badge %>"><%= stat %></span>
            </div>
            <div class="tms-action-inline">
              <form action="/booking/accept/<%=b._id%>" method="post">
                <button class="btn tms-btn" type="submit">Accept</button>
              </form>
              <form action="/booking/reject/<%= b._id%>" method="post">
                <button class="btn tms-btn-danger" type="submit">Reject</button>
              </form>
            </div>
          </div>
          <%}%>
        </div>
      </div>
    </section>
  </body>
</html>
